<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.ShowDetailActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/photo_category_showDetail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/img"
                android:layout_marginTop="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minu_Btn_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/baseline_minimize_red_500_24dp" />

                <TextView
                    android:id="@+id/Number_order_txt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#373b54"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/plus_btn_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/add_btn_red" />
            </LinearLayout>
            <TextView
                android:id="@+id/Title_Category_showDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textAlignment="center"
                android:textColor="#373b54"
                android:textSize="24dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/priceText_category_showDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:textColor="#ff5e00"
                android:textSize="24sp" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/addToCardBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Add to card"
        android:background="@drawable/btn_add_card"
        android:gravity="center"
        android:textSize="23sp"
        android:textStyle="bold"
        android:elevation="3dp"
        android:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
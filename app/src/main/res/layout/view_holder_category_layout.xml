<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    android:layout_marginRight="8dp"
    android:background="@drawable/category_background_shape5"
    >
          <ImageView
              android:id="@+id/photo_category_layout"
              android:layout_width="150dp"
              android:layout_height="130dp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="5dp"
             />
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:orientation="horizontal">
              <TextView
                  android:id="@+id/title_category_layout"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:text="Sports Wear"
                  android:gravity="center"
                  android:textColor="#6e6e70"
                  android:textSize="14sp"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:layout_marginLeft="20dp"
                  />

          </LinearLayout>
          <Button
              android:id="@+id/btn_price_category_layout_view_holder"
              android:layout_width="120dp"
              android:layout_height="40dp"
              android:layout_gravity="center_horizontal"
              android:backgroundTint="#E64141"
             android:textSize="14sp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:textColor="@color/white"
              android:textAllCaps="true"
              android:text="now 3$"
          />
</LinearLayout>